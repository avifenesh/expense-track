# Local development (Docker default)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/expense_track?schema=public"

# Production deployment (Railway/Neon/Render etc.)
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require"

# Secret used for signed session cookies (use: openssl rand -hex 32)
AUTH_SESSION_SECRET="replace-me-with-a-long-random-string"

# Optional: set a custom app URL when deploying
# Production: https://balancebeacon.app
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# User 1 credentials (REQUIRED for seed)
AUTH_USER1_EMAIL="user1@example.com"
AUTH_USER1_DISPLAY_NAME="User One"
# Generate hash with: node -e "const bcrypt = require('bcryptjs'); bcrypt.hash('YOUR_PASSWORD', 12, (err, hash) => console.log(hash));"
AUTH_USER1_PASSWORD_HASH=$2b$12$REPLACE_WITH_YOUR_HASH
AUTH_USER1_PREFERRED_CURRENCY="USD"

# User 2 credentials (OPTIONAL - for development/testing with multiple users)
# AUTH_USER2_EMAIL="user2@example.com"
# AUTH_USER2_DISPLAY_NAME="User Two"
# AUTH_USER2_PASSWORD_HASH=$2b$12$REPLACE_WITH_YOUR_HASH
# AUTH_USER2_PREFERRED_CURRENCY="EUR"

# Alpha Vantage API key for stock price fetching
ALPHA_VANTAGE_API_KEY="your-alpha-vantage-key"

# Optional: Stock price cache TTL in hours (default: 24)
STOCK_PRICE_MAX_AGE_HOURS="24"

# Google AI Configuration (for Balance AI assistant)
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_GENERATIVE_AI_API_KEY="your-google-ai-api-key"

# Optional: Disable AI assistant (set to "false" to hide chat widget)
# NEXT_PUBLIC_AI_ENABLED="true"

# ==========================================
# MONITORING & OBSERVABILITY
# ==========================================

# Sentry Error Tracking (Issue #49)
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# Environment: development, staging, production
SENTRY_ENVIRONMENT="production"
NEXT_PUBLIC_SENTRY_ENVIRONMENT="production"

# Enable/disable Sentry (set to "true" in production)
SENTRY_ENABLED="false"
NEXT_PUBLIC_SENTRY_ENABLED="false"

# For source map upload (CI/CD only)
SENTRY_ORG=""
SENTRY_PROJECT=""
SENTRY_AUTH_TOKEN=""

# Database Query Monitoring (Issue #51)
# Threshold in milliseconds for slow query alerts
SLOW_QUERY_THRESHOLD_MS="1000"

# Enable/disable query monitoring (enabled by default)
QUERY_MONITORING_ENABLED="true"

# ==========================================
# CRON JOBS
# ==========================================

# Secret for authenticating cron endpoint calls (use: openssl rand -hex 32)
# Required in production when using /api/cron/* endpoints
# Alternative: Run scripts directly via `npx tsx scripts/expire-subscriptions.ts`
CRON_SECRET=""

# ==========================================
# PADDLE PAYMENT PROVIDER
# ==========================================

# Paddle API key (from Paddle Dashboard > Developer Tools > Authentication)
PADDLE_API_KEY=""

# Paddle webhook secret (from Paddle Dashboard > Developer Tools > Notifications)
# Used to verify webhook signatures
PADDLE_WEBHOOK_SECRET=""

# Paddle price ID for the $5/month subscription
# Create in Paddle Dashboard > Catalog > Prices
PADDLE_PRICE_ID=""

# Paddle client-side token for Paddle.js (from Paddle Dashboard > Developer Tools)
NEXT_PUBLIC_PADDLE_CLIENT_TOKEN=""

# Paddle environment: "sandbox" for testing, "production" for live
NEXT_PUBLIC_PADDLE_ENVIRONMENT="sandbox"
